{
  "openapi": "3.0.1",
  "info": {
    "title": "Call Summary API",
    "description": "API for retrieving call summary information",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.example.com/v1"
    }
  ],
  "paths": {
    "/to_your_webhook_url": {
      "post": {
        "summary": "",
        "description": "",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CallSummaryResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Call not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CallSummaryRequest": {
        "type": "object",
        "required": ["call_id"],
        "properties": {
          "call_id": {
            "type": "string",
            "description": "Unique identifier for the call"
          }
        }
      },
      "CallSummaryResponse": {
        "type": "object",
        "properties": {
          "agentName": {
            "type": "string"
          },
          "formAnswersV2": {
            "type": "object",
            "additionalProperties": {
              "$ref": "#/components/schemas/FormAnswer"
            }
          },
          "mentionedEmail": {
            "type": "string"
          },
          "unansweredQuestions": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "actionItems": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "followUpReason": {
            "type": "string"
          },
          "followUp": {
            "type": "string"
          },
          "recordingUrl": {
            "type": "string"
          },
          "dashboardUrl": {
            "type": "string"
          },
          "purpose": {
            "type": "string"
          },
          "sentiment": {
            "type": "string"
          },
          "transcriptText": {
            "type": "string"
          },
          "callEnded": {
            "type": "string",
            "format": "date-time"
          },
          "transcript": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TranscriptEntry"
            }
          },
          "mentionedDate": {
            "type": "string",
            "nullable": true
          },
          "businessPhoneNumber": {
            "type": "string"
          },
          "keyPoints": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "topic": {
            "type": "string"
          },
          "longSummary": {
            "type": "string",
            "nullable": true
          },
          "callId": {
            "type": "string"
          },
          "ai_success": {
            "type": "string"
          },
          "customerPhoneNumber": {
            "type": "string"
          },
          "callStarted": {
            "type": "string",
            "format": "date-time"
          },
          "callerName": {
            "type": "string"
          },
          "callDirection": {
            "type": "string"
          },
          "mentionedTime": {
            "type": "string",
            "nullable": true
          },
          "summary": {
            "type": "string"
          }
        }
      },
      "FormAnswer": {
        "type": "object",
        "properties": {
          "questionName": {
            "type": "string"
          },
          "answer": {
            "type": "string"
          },
          "question": {
            "type": "string"
          }
        }
      },
      "TranscriptEntry": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string"
          },
          "role": {
            "type": "string"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}
